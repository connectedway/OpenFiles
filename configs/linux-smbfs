
option(OFC_64BIT_INTEGER "Compiler supports 64 bit integers" ON)
option(OFC_64BIT_POINTER "Compiler supports 64 bit pointers" ON)
option(OFC_LONGINT_64 "Compiler treats a long int as 64 bits" ON)
option(OFC_PERSIST "Build in persistent configuration support" ON)
option(OFC_PERF_STATS "Build in performance statistics" ON)
option(OFC_HANDLE_DEBUG "Build in debug checks for handles" OFF)
option(OFC_MESSAGE_DEBUG "Build in debug checks for messages" OFF)
option(OFC_APP_DEBUG "Build in debug checks for apps" OFF)
option(OFC_HEAP_DEBUG "Build in debug checks for heap" OFF)
option(OFC_UNICODE_API "File APIs use unicode" ON)
option(OFC_STACK_TRACE "Store call stack traces in debug output" OFF)
option(OFC_PRESELECT_PASS "App scheduler should rebuild waitlists" OFF)
set(OFC_MAX_HANDLE16 "100" CACHE STRING "Max 16-bit handles")
set(OFC_MAX_MAPS "20" CACHE STRING "Max file system maps")
set(OFC_TRACE_LEN "1" CACHE STRING "Size of trace buffer (must be at least 1)")
set(OFC_MAX_SCHED_WAIT "4000" CACHE STRING "Maximum scheduler sleep")
option(OFC_NTLMV2_TARGET_TIMESTAMP "Populate target timestamp in NTLM" ON)

set(OFC_WCHAR "wchar_t" CACHE STRING "Platform type of a wide character")
option(INCLUDE_PLATFORM_WCHAR "Include wchar.h" ON)
set(PLATFORM_WCHAR "wchar.h" CACHE STRING "Name of system types")

set(OFC_PROCESS_ID "pid_t" CACHE STRING "Platform type of a process id")
option(INCLUDE_PLATFORM_PROCESS_ID "Include platform process id" ON)
set(PLATFORM_PROCESS_ID "sys/types.h" CACHE STRING "Include File Name for Process ID")

set(OFC_SHARE_VARIANT "main" CACHE STRING "Variant name of build")
set(OFC_DEFAULT_NETBIOS_MODE "OFC_CONFIG_BMODE" CACHE STRING "Interface default NetBIOS Mode")

set(OFC_DEFAULT_NAME "localhost" CACHE STRING "Default system name")
set(OFC_DEFAULT_SCOPE "" CACHE STRING "Default system scope")
set(OFC_DEFAULT_DESCR "Open Files" CACHE STRING "Default system description")
set(OFC_DEFAULT_DOMAIN "WORKGROUP" CACHE STRING "Default system domain")
set(OFC_LOG_DEFAULT "1" CACHE STRING "Default Log Level")
set(OFC_LOG_CONSOLE "0" CACHE STRING "Log to Console, 1=yes, 0=no")
option(INIT_ON_LOAD "Initialize libraries on load" ON)
set(OFC_LOAD "__attribute__((constructor))" CACHE STRING "Compiler attribute for constructor")
set(OFC_UNLOAD "__attribute__((destructor))" CACHE STRING "Compile attribute for destructor")

set(OFC_IMPL "linux" CACHE STRING "Core platform implementation to use")
set(OFC_HEAP_IMPL "cheap" CACHE STRING "Heap implementation to use")
option(OFC_DISCOVER_IPV4 "Support IPv4 Addressing" ON)
option(OFC_DISCOVER_IPV6 "Support IPv6 Addressing" ON)
option(OFC_FS_LINUX "Add Open File Linux File System" ON)
option(OFC_FS_BOOKMARKS "Add Open File Bookmarks File System" ON)
option(OFC_LOOPBACK "Configure a loopback Address" OFF)
option(OFC_MULTI_TCP "Listen on Each TCP Interface (ON) or any (OFF)" OFF)
option(OFC_MULTI_UDP "Listen on Each UDP Interface (ON) or any (OFF)" OFF)
option(OF_NETBIOS "Include Netbios" ON)
option(OF_SMB "Include SMB build" ON)
option(OF_SMB_CLIENT "Include SMB client" ON)
option(OF_SMB_SERVER "Include SMB server" OFF)
option(OFC_INCLUDE_JNI "Build a JNI library" OFF)
option(OPENFILES_SMB_JNI "Build a SMB JNI library" OFF)
if(DEFINED OF_SMB_CLIENT OR DEFINED OF_SMB_SERVER)
  option(OF_SMB "Include SMB build" ON)
endif()
if(DEFINED OF_SMB_CLIENT)
  option(OFC_FS_SMB "Add Open Files SMB Client File System" ON)
endif()
if(DEFINED OPENFILES_SMB_JNI)
  option(OF_SMB "Include SMB build" ON)
  option(OFC_INCLUDE_JNI "Build a JNI library" ON)
endif()
option(OPENFILES_SMB_JNI "Build a SMB JNI library" OFF)
if(OPENFILES_SMB_JNI AND NOT OFC_INCLUDE_JNI)
  message(FATAL_ERROR "Must specific OFC_INCLUDE_JNI if specifying OPENFILES_SMB_JNI")
endif()

set(OFC_TEST_FS_LINUX_PATH "/tmp/openfiles/" CACHE STRING "Path to store test files for fs linux")
set(OFC_MAX_IO "65536" CACHE STRING "Maximum IO Buffer Size for Streaming")
set(OFC_CALL_STACK_SIZE "32768" CACHE STRING "Maximum Buffer To Map for I/O")
option(OFC_KERBEROS "Include Kerberos Package" ON)
option(OF_ENCRYPTION "Enable Encyption" ON)
option(OF_OPENSSL "Build with openssl" ON)
option(OF_GNUTLS "Build with gnutls" OFF)
option(OF_MBEDTLS "Build with mbedtls" OFF)
